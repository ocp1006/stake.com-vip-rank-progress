{
	"manifest_version": 3,
	"name": "Stake.com VIP Rank Progress",
	"version": "1.0.1",
	"description": "Calculates the amount required to reach the next VIP rank on Stake.com",
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://stake.com/*"
			],
			"css": [
				"css/styles.css"
			],
			"js": [
				"js/consts.js",
				"js/content.js"
			]
		}
	]
}